<div class="large-3 columns">
  <div class="search">
    <%= form_tag vents_path, method: :get do %>
    <%= text_field_tag :query %>
    <%= submit_tag "Search", { class: "button info expand radius" } %>
    <% end %>
    <% if current_page?(root_path) %>
    <h1><%= link_to "Visualize Most Used Words!", words_path %></h1>
    <% end %>
  </div>

  <% if @categories %>
  <div class="sidebarblock">
    <h3>Categories:</h3>
    <div class="divline"></div>
    <div class="blocktxt">
      <% @categories.each do |category| %>
      <ul>
        <li><%= link_to category.name, category_path(category) %></li>
      </ul>
      <% end %>
    </div>
  </div>
  <% end %>
  <% unless @random_vent == nil %>
  <div class="sidebarblock">
    <h3>Random Vents:</h3>
    <div class="divline"></div>
    <div class="blocktxt">
      <div class="random-vent">
        <ul>
          <% @random_vent.each do |vent| %>
          <li><%= link_to vent.title, vent_path(vent) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% end %>
</div>
