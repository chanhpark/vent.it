<div class="large-8 column">
  <div class="content">
    <header>
      <h3 class="entry-title"> #<%= @vent.id %> <%= link_to @vent.title, vent_path(@vent) %></h3>
        <div class="post-author">
          Shared by Anonymous <%= time_ago_in_words(@vent.created_at) %>
        </div>
    </header>
    <div class="post">
      <p> <%= @vent.content %> </p>
        <span class="count">
          <%= link_to pluralize(@vent.comments.count, "Comment") %> -
          <%= link_to @vent.category.name, vent_path(@vent) %> -
        </span>
        <span class="votes">
          <%= link_to like_vent_path(@vent), method: :get, class: "data" do %>
          <i class="fa fa-angle-double-up"></i>
          <%= pluralize(@vent.get_upvotes.size, "Like") %>
          <% end %>
          <%= link_to dislike_vent_path(@vent),  method: :get, class: "data" do %>
          <i class="fa fa-angle-double-down"></i>
          <%= pluralize(@vent.get_downvotes.size, "Dislike") %>
          <% end %>
        </span>
    </div>
  </div>
  <div id="comments">
    <div class="comment">
      <% @comments.each do |reply| %>
        <p class="content">
          Posted by <%= reply.user.email %> about <%= time_ago_in_words(reply.created_at) %> ago
        </p>
          <%= reply.reply %>
            <% unless current_user == nil %>
              <% if reply.user_id == current_user.id || current_user.admin = true  %>
                <div class="updates">
                  <%= link_to "Edit Comment", edit_vent_comment_path(@vent, reply) %>
                  <%= link_to "Delete", vent_comment_path(@vent, reply), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            <% end %>
          <% end %>
        <%= render "comments/form" %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8">

      <!-- POST -->
      <div class="post beforepagination">
        <div class="topwrap">
